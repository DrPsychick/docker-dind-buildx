{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "custom.regex"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "github-releases"
      ],
      "versioning": "regex:^(?<compatibility>.*?)?[-\\/]?v?(?<major>\\d+?)(\\.(?<minor>\\d+?))(\\.(?<patch>\\d+?))$"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^.circleci/config.yml$",
        "^images.*/.*/Dockerfile$"
      ],
      "matchStrings": [
        "\\sdefault: (?<currentValue>.*?) # (?<datasource>.*?):(?<depName>.*?)\\n",
        "# (?<datasource>.*?):(?<depName>.*?)\\sARG .*?_VERSION=(?<currentValue>.*)\\n"
      ]
    }
  ]
}
